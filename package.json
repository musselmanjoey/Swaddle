{
  "name": "swaddle",
  "version": "1.0.0",
  "description": "Spotify Playlist Creator - Desktop App",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "cross-env BROWSER=none craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:migrate-enhancer": "node scripts/run-migration.js",
    "db:reset": "node scripts/reset-database.js",
    "db:diagnostic": "node scripts/database-diagnostic.js",
    "db:check-debug": "node scripts/check-debug-results.js",
    "db:verify-sync": "node scripts/verify-smart-sync.js",
    "setup": "node scripts/setup.js",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "lodash": "^4.17.21",
    "natural": "^6.12.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.swaddle.playlist-creator",
    "productName": "Swaddle Playlist Creator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
